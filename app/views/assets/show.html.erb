<p id="notice" class="success-box"><%= notice %></p>


<div class="page-header border-b-0">
  <div class="page-header__title">
    <%= link_to '← Assets', assets_path, class: 'text-sm text-purple-700 inline-block mb-3' %>
    <h1 class="text-white text-2xl"><%= @asset.handle %></h1>
  </div>
  <div class="page-header__actions">
    <%= link_to 'Edit', edit_asset_path(@asset), class: 'btn-ghost' %> 
    <%= link_to 'Destroy', @asset, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-ghost' %>
  </div>
</div>

<div class="flex mb-4 -mx-2">
  <div class="w-3/4 px-2">
    <div>
    <h1 class="text-white text-2xl">Evidence</h1>
    </div>
  </div>
  <div class="w-1/4 px-2">
    <div class="rounded">
      <h1 class="text-white text-2xl">Properties</h1>
      <%= link_to 'Edit', edit_asset_path(@asset) %>
      <div class="stack-v">
        <div>
          <div>Handle</div>
          <div><%= @asset.handle %>
        </div>

        <div>
          <div>Type</div>
          <div><%= @asset.asset_type %>
        </div>
        
        <% @asset.props.each do |prop, value| %>
          <div>
          <div><%= prop.capitalize %></div>
          <div><%= value %>
          </div>
        <% end %>

        <% @asset.tags.each do |tag, value| %>
          <div class="tag">
            <div><%= tag.capitalize %></div>
            <div><%= value %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

